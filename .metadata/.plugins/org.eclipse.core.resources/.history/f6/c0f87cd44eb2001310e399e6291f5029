    <PreferenceCategory
        android:key="pref_key_display"
        android:title="Display" >
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/mapChoiceArray"
            android:entryValues="@array/mapChoiceValues"
            android:key="mapDisplayPref"
            android:title="Map Display" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="geofencealertpref"
            android:summaryOff="Geofencing is disabled"
            android:summaryOn="Geofencing is enabled"
            android:title="Enable Geofencing" />
    </PreferenceCategory>

</PreferenceScreen>